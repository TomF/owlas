@model owlas_0_0_1.Models.RegisterModel
           
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="form_container"> 
    <div id="registate"><h1>Regista-te</h1></div>
    <div id="registo">
    @using (Html.BeginForm("Register", "Account")) {
    <div id="form">
            <div class="editor_field">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { autocomplete = "off", Class = "clearMeFocus", spellcheck = "false" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="editor_field">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { autocomplete = "off", Class = "clearMeFocus", spellcheck = "false" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <input id="criarconta" type="submit" value="" />
    </div><!--form-->
    }
    <div id="other">
                <h3>Podes também fazer login com outros serviços</h3>
                <div id="otherbuttons">
                    <div id="face"><fb:login-button>Login Facebook</fb:login-button></div>
                    <div id="goog"></div>
                    <script type="text/javascript">                        google.friendconnect.renderSignInButton({ 'id': 'goog', 'style': 'long', 'text': 'Login Google' });</script>
                </div>
            </div>
    </div>
</div>
